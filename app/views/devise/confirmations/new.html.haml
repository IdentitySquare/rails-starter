.text-center
  %h1.h1.mt-6 Resend Confirmation Instructions

.mt-8.card.card-body
  = form_for(resource, as: resource_name, url: confirmation_path(resource_name), builder: TailwindFormBuilder, html: { method: :post, class: 'space-y-6 -mt-6' }) do |f|
    = render "devise/shared/error_messages", resource: resource

    = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Your email address", value: params[:email] || (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), required: true
    = f.button "Resend confirmation instructions", class: "w-full btn-primary"

.text-center.mt-10
  = link_to "Back to sign in", new_user_session_path, class: "link font-medium text-sm"
