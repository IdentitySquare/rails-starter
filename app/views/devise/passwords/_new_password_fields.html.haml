= f.password_field :password, placeholder: "Your new password", autocomplete: "new-password", required: true, hint: ("#{@minimum_password_length} characters minimum." if @minimum_password_length), minlength: (@minimum_password_length if @minimum_password_length)
= f.password_field :password_confirmation, placeholder: "Confirm new password", autocomplete: "new-password", required: true, minlength: (@minimum_password_length if @minimum_password_length)