.text-3xl.font-bold.tracking-tight.text-gray-900.dark:text-white
  Your Profile

.py-10
  .grid.grid-cols-1.gap-x-8.gap-y-8.md:grid-cols-3
    .px-4.sm:px-0
      %h2.text-base.font-semibold.leading-7.text-gray-900.dark:text-white Profile
      %p.mt-1.text-sm.leading-6.text-gray-600.dark:text-gray-400 This information will be displayed publicly so be careful what you share.
    %div.card.md:col-span-2
      = form_with(model: resource, as: resource_name, url: registration_path(resource_name), builder: TailwindFormBuilder, method: :put) do |f|
        .px-4.py-6.sm:p-8
          = render "devise/shared/error_messages", resource: resource

          .grid.grid-cols-1
            .w-full.space-y-6
              = f.text_field :full_name, autocomplete: "name", placeholder: "John Doe", required: true
              = f.email_field :email, autocomplete: "email", placeholder: "you@example.com", required: true

              - if devise_mapping.confirmable? && resource.pending_reconfirmation?
                %div
                  Currently waiting confirmation for: #{resource.unconfirmed_email}
            
        .flex.items-center.justify-end.gap-x-6.border-t.px-4.py-4.sm:px-8{:class => "border-gray-900/10 dark:border-neutral-800"}
          %a.link
            = button_to "Delete Account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete
          = f.button "Save", class: "btn-primary"

.py-10
  .grid.grid-cols-1.gap-x-8.gap-y-8.md:grid-cols-3
    .px-4.sm:px-0
      %h2.text-base.font-semibold.leading-7.text-gray-900.dark:text-white Password
      %p.mt-1.text-sm.leading-6.text-gray-600.dark:text-gray-400 This information will be displayed publicly so be careful what you share.
    %div.card.md:col-span-2
      = form_with(model: resource, as: resource_name, url: registration_path(resource_name), builder: TailwindFormBuilder, method: :put) do |f|
        .px-4.py-6.sm:p-8
          = render "devise/shared/error_messages", resource: resource

          .grid.grid-cols-1
            .w-full.space-y-6
              = f.password_field :password, placeholder: "Your new password", autocomplete: "new-password"
              - if @minimum_password_length
                %em.text-sm
                  = @minimum_password_length
                  characters minimum

              = f.password_field :password_confirmation, placeholder: "Confirm new password", autocomplete: "new-password"
              = f.password_field :current_password, placeholder: "Your current password", autocomplete: "current-password"

        .flex.items-center.justify-end.gap-x-6.border-t.px-4.py-4.sm:px-8{:class => "border-gray-900/10 dark:border-neutral-800"}
          = f.button "Save", class: "btn-primary"
