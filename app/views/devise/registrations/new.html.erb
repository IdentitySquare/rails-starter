<div class="text-center">
  <h2 class="mt-6 text-3xl font-bold tracking-tight text-gray-900">Create your account</h2>
  <p class="mt-2 text-sm text-gray-600">
    Or
    <%= link_to "sign in to your account", new_user_session_path, class: "font-medium link" %>
  </p>
</div>
<div class="mt-8 card card-body p-10">
  <%= render 'devise/shared/social_login' %>
  <div class="mt-5">
    <%= render 'shared/flash' %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), builder: TailwindFormBuilder, html: {class: 'space-y-6'}) do |f| %>
      <div class="flex space-x-4">
        <div class="flex-1">
          <%= f.text_field :first_name, autocomplete: 'first-name', placeholder: true, required: true %>
        </div>
        <div class="flex-1">
          <%= f.text_field :last_name, autocomplete: 'last-name', placeholder: true, required: true %>
        </div>
      </div>
      <%= f.email_field :email, autocomplete: 'email', placeholder: true, required: true %>
      <div class="flex space-x-4">
        <div class="flex-1">
          <%= f.password_field :password, placeholder: "Your password", autocomplete: "new-password", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        </div>
        <div class="flex-1">
          <%= f.password_field :password_confirmation, placeholder: "Confirm password", autocomplete: "new-password", required: true %>
        </div>
      </div>
      <div>
        <%= f.button "Create account", class: "flex w-full justify-center btn-primary", data: {disable_with: "Signing in..."} %>
      </div>
    <% end %>
    <div class="mt-6 text-sm text-center">
      By creating an account, you agree to the 
      <%= link_to "terms of service", "#", class: "link" %> 
      and 
      <%= link_to "privacy policy", "#", class: "link" %>.
    <div>
  </div>
</div>